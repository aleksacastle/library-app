<div class="jumbotron text">
  <h2>Your contacts</h2>
  <br/>
  <div class="row">
    <div class="col-lg-6">
      <label>Your email address*:</label>
      {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
        <br/>
      <label>Your message*:</label>
      {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}

    </div><!-- /.col-lg-6 -->
  </div><!-- /.row -->

  <br/>

  <div class="row">
    <div class="col-lg-6">
          <button class="btn btn-primary btn-lg btn-block" {{action 'sendMessage'}} disabled="{{unless isValid 'disabled'}}">Send message</button>
      </div><!-- /.col-lg-6 -->
  </div><!-- /.row -->

  {{#if responseMessage}}
      <div class="col-md-6">
          <br/>
          <div class="alert alert-success">
              <h4>Thank you! Your message is sent.</h4>
              <p>{{responseMessage}}</p>
          </div>
      </div>
{{/if}}
</div><!-- /.jumbotron -->
